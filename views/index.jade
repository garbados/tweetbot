extends layout
block content
  .row
    - if(typeof(tweets) !== "undefined")
      - each tweet in tweets
        .small-12.medium-4.large-4.columns
          .panel.tweet
            .header
              img.image(src= tweet.value.user.profile_image_url)
              a(href= tweet.value.user.url) @
                = tweet.value.user.screen_name
            .body
              = tweet.value.text
